@using TatilSeyahatSitesi.Models.Siniflar
@model List<Hakkimizda>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<!DOCTYPE HTML>
<html>
<body>

    <div class="content">
        <div class="wrap">
            <div class="about">
                <h3>Hakkımızda</h3>

                @*Mvc de listelemek için Foreach döngüsü kullanılıyor*@

                @foreach (var x in Model)
                {
                    <img src="@x.FotoUrl" alt="" />
                    <p>@x.Aciklama </p>
                }
            </div>
        </div>
    </div>
</body>
</html>


