@using TatilSeyahatSitesi.Models.Siniflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}
<br />
<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAY</th>
    </tr>


        @foreach (var x in Model)
            {
                <tr>
                    <td>@x.ID</td>
                    <td>@x.Baslik</td>
                    <td><a href="/Admin/Sil/@x.ID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-primary">GÜNCELLE</a></td>
                    <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-warning">DETAY</a></td>
                </tr>
            }
    
</table>

<a href="/Admin/YeniBlog/" class="btn btn-success">YENİ BLOG</a>