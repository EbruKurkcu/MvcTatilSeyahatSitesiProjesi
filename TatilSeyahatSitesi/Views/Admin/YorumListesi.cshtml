@using TatilSeyahatSitesi.Models.Siniflar
@model List<Yorumlar>
@{
    ViewBag.Title = "YorumListesi";
    Layout = "~/Views/Shared/_AdminLoyout.cshtml";
}

<h2>Yorum Listesi</h2>

<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>KULLANICI ADI</th>
        <th>MAİL</th>
        <th>YORUM</th>
        <th>BLOG</th>
        <th>SİL</th>
        <th>GÜNCELLEME</th>
    </tr>

    <tbody>
        @foreach (var x in Model)
            {
                <tr>
                    <th>@x.ID</th>
                    <td>@x.KullaniciAdi</td>
                    <td>@x.Mail</td>
                    <td>@x.Yorum</td>
                    <td>@x.Blog.Baslik</td>
                    <td><a href="/Admin/YorumSil/@x.ID" class="btn btn-danger">SİL</a></td>
                    <td><a href="/Admin/YorumGetir/@x.ID" class="btn btn-primary">GÜNCELLE</a></td>

                </tr>
            }
    </tbody>
</table>

